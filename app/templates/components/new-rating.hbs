{{#if addNewRating}}
<h1>New Rating</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="credibility">credibility of comment</label>
        {{input value=credibility id="credibility"}}
      </div>
      <button {{action 'saveRating'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'ratingFormShow'}}> Add a new Rating for the credibility of the comment</button>
{{/if}}
